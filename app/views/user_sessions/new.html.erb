<% form_for @user_session, :url => user_session_path do |f| %>
<%= f.error_messages %>
<div id="login">
	<h2>Login</h2>
	<div id="login_form">
		<div>
			<%= f.label "Email" %><br />
			<%= f.text_field :login, :size => 22%>
		</div>
		<div>
			<%= f.label "Password" %><br />
			<%= f.password_field :password, :size => 22%>
		</div>
		<p><%= f.check_box :remember_me %> Remember me on this computer.</p>
		<hr>
		<p>
			<%= f.submit "Login", :id => 'submit_login' %> <%= link_to "forgotten password",  new_password_reset_path %> or <%= link_to "Register", new_account_path %>
		</p>
	</div>
</div>
<% end %>

