<% if current_user && !@task.freezed? %>
<%= has_attachment(@task) %>
	<%= link_to_remote '', :html => {:class => get_status(@task)}, :url => update_show_page_path(@task, :status => "finished"	)%>
<% else %>
<%= has_attachment(@task) %>
	<span class="<%= get_status(@task) %>"></span>
<% end %>
<% show_description(@task) %>
<span class="tsk_name <%= urgent?(@task) %>"><%= @headding %></span>
<%= change_status_link(@task) %>
<p><%= @description %></p>
