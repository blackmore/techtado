<% if !current_user %>
	<div class="notice">
		<%= t 'task.comment_form.not_logged_in' %>
	</div>
<% end %>
<div id="show_task">
	<%= render :partial =>  'show' %>
</div>
<h3 id="comment_header"><%= t'task.comment.title' %></h3>
<div id="comments">
	<%= render :partial => @task.comments %>
</div>
<% if current_user %>	
	<div id="addComent">	
		<% remote_form_for [@task, Comment.new] do |f| -%>
			<%= f.label :body, t('task.comment_form.add_comment') %><br />
			<%= f.text_area :body, :rows => 4, :cols => 40 %>
			<p id="freeze_task"><%= @task.freezed? ? t('task.frozen.unfreeze_ch') : t('task.frozen.freeze_ch') %> <%= check_box_tag @task.freezed? ? 'unfreeze' : 'freeze' %></p>
			<hr>
		 	<%= f.submit t('task.comment_form.submit') %>
		<% end -%>
	</div>
<% end %>





